<?xml version="1.0" encoding="utf-8"?>
<!-- suppress ALL -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.loginandregistration"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="info.androidhive.loginandregistration.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="info.androidhive.loginandregistration.Splashscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.androidhive.loginandregistration.activity.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.androidhive.loginandregistration.activity.RegisterActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="info.androidhive.loginandregistration.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="info.androidhive.loginandregistration.activity.MarketInfo"
            android:label="@string/title_activity_market_info" />
        <activity
            android:name="info.androidhive.loginandregistration.activity.ResearchInfo"
            android:label="@string/title_activity_research_info" />
        <activity
            android:name="info.androidhive.loginandregistration.activity.Calendar"
            android:label="@string/title_activity_calendar" />
        <activity
            android:name="info.androidhive.loginandregistration.activity.ContactList"
            android:label="@string/title_activity_contact_list" />
        <activity
            android:name="info.androidhive.loginandregistration.activity.ScanContact"
            android:label="@string/title_activity_scan_contact" />
        <activity
            android:name="info.androidhive.loginandregistration.activity.Reminders"
            android:label="@string/title_activity_reminders" />
    </application>

</manifest>